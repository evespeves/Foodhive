<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="144dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075">

        <TextView
            android:id="@+id/textName"
            android:layout_width="56dp"
            android:layout_height="26dp"
            android:text="@string/name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:text="@string/email"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/textDairy"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="@string/dairy"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/textGluten"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="@string/gluten"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/textNuts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nuts"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="72dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="281dp"
        android:layout_height="148dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="281dp"
            android:layout_height="28dp"
            android:text="@string/name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/textViewDairy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dairy"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="120dp" />

        <TextView
            android:id="@+id/textViewGluten"
            android:layout_width="281dp"
            android:layout_height="34dp"
            android:text="@string/gluten"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="206dp" />

        <TextView
            android:id="@+id/textViewNut"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:text="@string/nuts"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="168dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>